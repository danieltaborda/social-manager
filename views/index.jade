extends layout

block body
  
  div.container
    div.navbar
      div.navbar-inner
        a(data-toggle="collapse",data-target=".nav-collapse").btn.btn-navbar
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.brand(href='#') wTVision
        div.nav-collapse.collapse
          ul.nav
            li(ng-class="{active : isActive('/home/')}")
              a(href='/home/') Home
            li(ng-class="{active : isActive('/admin/')}")
              a(href='/admin/') Admin
          if email
            p(class="navbar-text pull-right")
                span
                  | Logged in as 
                  b #{email} (#{privilege})  
                  a(href="/logout", style="margin:0;", target="_self").navbar-link.btn.btn-mini Sign out   
  div.container
    div(ng-view)
    div(ng-controller="socketCtrl")
      pre(style="text-align:right") {{time}}
      form(name="form", ng-submit="sendMessage('#{email}')")
        div.input-append
          input(name="message" , ng-model="message",type="text",placeholder="lets comment here..." , required,  ng-minlength="5").span12
          button(type="submit").btn
            i.icon-comment
      ul.media-list
        li(ng-repeat="myMessage in messages").media
          a(href="#").pull-left
            img(src="http://placehold.it/64x64").media-object
          div.media-body
            h4.media-heading {{myMessage.user}}
            | {{myMessage.text}}
    hr
    footer
      | Â© wTVision 2012 - Data Social Manager app: v
      span(app-version)
      
  script(src='js/lib/jquery/jquery-1.8.3.js')
  script(src='js/lib/jquery/jquery-ui-1.8.24.custom.min.js')
  script(src='js/lib/bootstrap/bootstrap.js')
  script(src='js/lib/bootstrap/bootstrap-fileupload.js')
  script(src='js/lib/angular/angular.js')
  script(src='socket.io/socket.io.js')
  script(src='js/lib/angular/angular-resource.js')
  script(src='js/lib/angular/angular-ui.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
